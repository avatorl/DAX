VAR _N = 10
VAR _group =
    SELECTEDVALUE ( 'FundOther'[Fund] )
//top 10 Funds by number of new donors
VAR _topN =
SELECTCOLUMNS (
    TOPN (
        _N,
        ADDCOLUMNS (
            ALLSELECTED ( 'Fund'[Fund] ),
            "@New Donors", [New Donors] + RAND ()
        ),
        [@New Donors], DESC
    ),
"C", [Fund] )
//return number of donors for the selected fund if it's in _topN
//return number of donors for all funds that are not in _topN if "Other Funds" selected
VAR _result =
    IF (
        _group = "Other Funds",
        CALCULATE (
            [New Donors],
            FILTER ( Fund, NOT ( Fund[Fund] IN _topN ) )
        ),
        IF (
            _group IN _topN,
            CALCULATE ( [New Donors], FILTER ( Fund, Fund[Fund] = _group ) ),
            BLANK ()
        )
    )
RETURN
    IF ( _result = 0, BLANK (), _result )
