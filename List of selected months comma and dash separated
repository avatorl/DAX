Selected Months = 
var _numbers = VALUES ( Dates[Month Number] )
var _names = VALUES ( Dates[Month Short] )
RETURN SUBSTITUTE(
    CONCATENATEX (
        _names,
        var _thisMonthName = Dates[Month Short]
        var _thisMonthNumber = CALCULATE ( MAXA ( Dates[Month Number] ), FILTER(Dates, Dates[Month Short] = _thisMonthName ) )
        var _previousMonthsNumber = _thisMonthNumber - 1
        var _nextMonthsNumber = _thisMonthNumber + 1
        var _monthToShow = IF ( 
            NOT _previousMonthsNumber IN _numbers,
            ", " & _thisMonthName,
            IF ( 
                _nextMonthsNumber IN _numbers,
                "", 
                "-" & _thisMonthName
            )
        )   
        return _monthToShow
    ),
    ", ",
    "",
    1
)
//See also https://www.youtube.com/watch?v=QYbl4k_CWBE
